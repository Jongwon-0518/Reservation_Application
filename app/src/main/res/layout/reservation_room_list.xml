<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/reservation_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/reservation_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/reservation_room_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:paddingLeft="30dp"
                android:textSize="30sp"
                android:layout_weight="8"/>

            <TextView
                android:id="@+id/reservation_room_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Code"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reservation_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/reservation_room_menu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="Menu"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/reservation_room_time"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="60dp"
                android:text="0000년 0월 0일 00:00 - 00:00"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>